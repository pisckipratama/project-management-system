<%- include("../partials/_navbar") %>

<br>
<div class="container-fluid">
  <h2>Add Project</h2>
  <hr>

  <div class="container">
    <form>
      <div class="form-group row">
        <label for="inputNameProject" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputNameProject" name="inputNameProject" placeholder="Project Name">
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">Members</div>
        <div class="col-sm-10">
          <% result.forEach((element, index) => { %>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="<%= element.id %>">
            <label class="form-check-label" for="gridCheck1">
              <%= element.firstname %> <%= element.lastname %>
            </label>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Add</button>
            <a class="btn btn-warning" href="/project" role="button">Back</a>
        </div>
      </div>
    </form>
  </div>

</div>
<hr>
