<%- include("../partials/_navbar") %>

<br>
<div class="container-fluid">
  <h2>Profile</h2>
  <hr>

  <div class="container">
    <form method="PUT" action="">
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" name="inputEmail" value="<%= result.email %>" readonly>
        </div>
      </div>
      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" name="inputPassword" placeholder="Password">
        </div>
      </div>
      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Position</legend>
          <div class="col-sm-10">
            <div class="custom-control custom-radio">
              <input type="radio" id="position1" name="radioPosition" class="custom-control-input">
              <label class="custom-control-label" for="position1">Manager</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="position2" name="radioPosition" class="custom-control-input">
              <label class="custom-control-label" for="position2">Software Developer</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="position3" name="radioPosition" class="custom-control-input">
              <label class="custom-control-label" for="position3">Quality Assurance</label>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Type</legend>
          <div class="col-sm-10">
            <div class="custom-control custom-radio">
              <input type="radio" id="type1" name="radioType" class="custom-control-input">
              <label class="custom-control-label" for="type1">Full Time</label>
            </div>
            <div class="custom-control custom-radio">
              <input type="radio" id="type2" name="radioType" class="custom-control-input">
              <label class="custom-control-label" for="type2">Part Time</label>
            </div>
          </div>
        </div>
      </fieldset>


      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Update</button>
        </div>
      </div>
    </form>
  </div>

</div>