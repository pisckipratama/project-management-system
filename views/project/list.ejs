<%- include("../partials/_navbar") %>

<div class="container-fluid">
  <br>
  <h2>Projects</h2>
  <hr>

  <h3>Filters</h3>
  <div class="container">
    <form id="form-filter" method="GET">
      <div class="form-group row">
        <label for="inputID" class="col-sm-2 col-form-label"> <input type="checkbox" name="checkID"> ID</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name='inputID' placeholder="ID">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label"> <input type="checkbox" name="checkName">
          Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name='inputName' placeholder="Name">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputBoolean" class="col-sm-2 col-form-label"> <input type="checkbox" name="checkBoolean">
          Member</label>
        <div class="col-sm-10">
          <select class="custom-select" name="inputMember">
            <option disabled selected>Choose the member</option>
            <% dataUser.forEach((element, index) => { %>
            <option value="<%= element.email %>"><%= element.firstname %> <%= element.lastname %></option>
            <% }) %>
          </select>
        </div>
      </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn" style="background-color: #321a75; color: #fff;">Search</button>
    </div>
  </div>
  </form>
  <hr>

  <form>
    <h3>Option</h3>
    <div class="form-group row">
      <div class="col-sm-2">Columns</div>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="checkID" name="chkid" value="id">
          <label class="form-check-label" for="checkID">
            ID
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="checkName" name="chkname" value="name">
          <label class="form-check-label" for="checkName">
            Name
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="checkMember" name="chkmember" value="member">
          <label class="form-check-label" for="checkMember">
            Member
          </label>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn" style="background-color: #321a75; color: #fff;">Apply</button>
      </div>
    </div>
  </form>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Project ID</th>
        <th scope="col">Name</th>
        <th scope="col" hidden>Member</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% dataProject.forEach((element, index) => { %>
      <tr>
        <th scope="row"> <%= element.projectid %></th>
        <td><%= element.name %></td>
        <td hidden> User <%= index + 1 %></td>
        <td>
          <a class="btn btn-success btn-sm" href="/project/edit/<%= element.projectid %>" role="button">Edit</a>
          <a class="btn btn-danger btn-sm delete" onclick="return confirm('Are you sure you want to delete this item?');"
            href="/project/delete/<%= element.projectid %>">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <a class="btn" style="background-color: #321a75; color: #fff;" href="/project/add" role="button">Add</a>
  <hr>

  <%- include("../partials/_footer") %>