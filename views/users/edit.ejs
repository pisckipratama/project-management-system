<%- include("../partials/_navbar") %>

<br>
<div class="container-fluid">
  <h2>Edit User</h2>
  <hr>

  <div class="container">
    <form method="POST">
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail" name="editEmail" value="<%= result.email %>" readonly>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputFirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputFirstName" name="editFirstname" value="<%= result.firstname %>">
        </div>
      </div>

      <div class="form-group row">
        <label for="inputLastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputLastName" name="editLastname" value="<%= result.lastname %>">
        </div>
      </div>

      <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="inputPassword" name="editPassword" placeholder="Password">
        </div>
      </div>

      <div class="form-group row">
        <label for="inputBoolean" class="col-sm-2 col-form-label">Position</label>
        <div class="col-sm-10">
          <select class="custom-select" name="editPosition">
            <option value=""></option>
            <option value="Quality Assurance" <%= result.position == 'Quality Assurance' ? 'selected' : '' %>>Quality
              Assurance</option>
            <option value="Manager" <%= result.position == 'Manager' ? 'selected' : '' %>>Manager</option>
            <option value="Software Developer" <%= result.position == 'Software Developer' ? 'selected' : '' %>>Software
              Developer</option>
          </select>
        </div>
      </div>

      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Job Type</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="editJobtype" id="gridRadios1" value="Full Time" <%= result.isfulltime == true ? "checked" : "" %> >
              <label class="form-check-label" for="gridRadios1">
                Full Time
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="editJobtype" id="gridRadios2" value="Part Time" <%= result.isfulltime == false ? "checked" : "" %> >
              <label class="form-check-label" for="gridRadios2">
                Part Time
              </label>
            </div>
          </div>
        </div>
      </fieldset>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn" style="background-color: #321a75; color: #fff;">Update</button>
          <button type="reset" class="btn btn-secondary">Reset</button>
          <a class="btn btn-warning" href="/users" role="button">Back</a>
        </div>
      </div>
    </form>
  </div>

</div>
<hr>
<%- include("../partials/_footer") %>