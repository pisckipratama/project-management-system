<%- include("../partials/_navbar") %>

<br>
<div class="container-fluid">
  <h2>Users</h2>
  <hr>

  <div class="container">

    <form method="POST">
      <h3>Filters</h3>
      <div class="form-group row">
        <label for="inputId" class="col-sm-2 col-form-label">
          <input type="checkbox" name="checkID"> ID
        </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputId" name="inputId" placeholder="ID">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">
          <input type="checkbox" name="checkName"> Name
        </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputName" name="inputName" placeholder="Name">
        </div>
      </div>
      <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">
          <input type="checkbox" name="checkEmail"> Email
        </label>
        <div class="col-sm-10">
          <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="Email">
        </div>
      </div>

      <div class="form-group row">
        <label for="inputBoolean" class="col-sm-2 col-form-label"> <input type="checkbox" name="checkPosition">
          Position</label>
        <div class="col-sm-10">
          <select class="custom-select" name="inputPosition">
            <option disabled selected>Choose the member</option>
            <option value="">Quality Assurance</option>
            <option value="">Manager</option>
            <option value="">Software Engineer</option>
          </select>
        </div>
      </div>

      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">
            <input type="checkbox" name="checkTypeJob"> Type Job
          </legend>
          <div class="col-sm-10">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" name="inputTypeJob"
                value="Full Time" checked>
              <label class="form-check-label" for="gridRadios1">
                Full Time
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" name="inputTypeJob"
                value="Part Time">
              <label class="form-check-label" for="gridRadios2">
                Part Time
              </label>
            </div>
          </div>
        </div>
      </fieldset>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary" style="background-color: #321a75; color: #fff;">Search</button>
        </div>
      </div>
    </form>

    <hr>

    <form method="POST">
      <h3>Option</h3>
      <div class="form-group row">
        <div class="col-sm-2">Columns</div>
        <div class="col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkID" name="chkid" value="id" checked>
            <label class="form-check-label" for="checkID">
              ID
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkName" name="chkname" value="name" checked>
            <label class="form-check-label" for="checkName">
              Name
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="checkMember" name="chkmember" value="member" checked>
            <label class="form-check-label" for="checkMember">
              Position
            </label>
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn" style="background-color: #321a75; color: #fff;">Apply</button>
        </div>
      </div>
    </form>

    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">User ID</th>
          <th scope="col">Email</th>
          <th scope="col">Name</th>
          <th scope="col">Position</th>
          <th scope="col">Type Job</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach((element, index) => { %>
        <tr>
          <th scope="row"> <%= element.userid %></th>
          <td><%= element.email %></td>
          <td><%= element.name %></td>
          <td><%= element.position %></td>
          <td><%= element.isfulltime %></td>
          <td>
            <a class="btn btn-success btn-sm" href="/users/edit/<%= element.userid %>" role="button">Edit</a>
            <a class="btn btn-danger btn-sm delete"
              onclick="return confirm('Are you sure you want to delete this item?');"
              href="/project/delete/<%= element.userid %>">Delete</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <a class="btn" style="background-color: #321a75; color: #fff;" href="/users/add" role="button">Add</a>

  </div>
</div>
<hr>
<%- include("../partials/_footer") %>